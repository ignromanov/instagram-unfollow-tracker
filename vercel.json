{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build && cd docs && bundle install && bundle exec jekyll build -d ../dist/docs",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/docs/:path*",
      "destination": "/docs/:path*"
    },
    {
      "source": "/:lang(es|pt|hi|id|tr|ja|ru|de)/:path*",
      "destination": "/:lang/:path*"
    },
    {
      "source": "/((?!assets|docs|favicon|apple-touch|site\\.webmanifest|robots\\.txt|sitemap\\.xml).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
